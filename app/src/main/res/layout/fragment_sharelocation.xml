<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    android:fitsSystemWindows="true">
    <com.olituc.designshot.Utils.NoSlideViewPager
        android:id="@+id/vp_share_location_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.olituc.designshot.Utils.NoSlideViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/vp_share_location_all"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/activity_background_color">
        <TextView
            android:id="@+id/switch_to_hot_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/hot_location"/>
        <TextView
            android:id="@+id/add_my_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="40dp"
            android:text="+"/>
        <TextView
            android:id="@+id/switch_to_my_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/my_location"/>
    </LinearLayout>
</RelativeLayout>
