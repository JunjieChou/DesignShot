<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.olituc.designshot.Utils.CustomScrollView
        android:id="@+id/ScrollView_shareLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.olituc.designshot.Utils.HorizontalListView
                android:id="@+id/hlv_top_location"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

            </com.olituc.designshot.Utils.HorizontalListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/designshoticon_round"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门机位"
                    android:textColor="@color/font_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.olituc.designshot.Utils.HotLocationListView
                    android:id="@+id/lv_all_hot_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false">

                </com.olituc.designshot.Utils.HotLocationListView>
            </LinearLayout>

        </LinearLayout>

    </com.olituc.designshot.Utils.CustomScrollView>

</LinearLayout>